<li>
    <h2><%= name %> <span class="price">$<%= price * quantity %></span></h2>
    <form action="/cart/update" method="post" class="update">
        <input type="hidden" name="id" value="<%= id %>" />
        <input type="number" name="quantity" value="<%= quantity %>" id="quantity" min="0">
        <button type="submit">
            <i class="fa-solid fa-sync"></i>
        </button>
    </form>
    <form action="/cart/remove" method="post" class="delete">
        <input type="hidden" name="id" value="<%= id%>" />
        <button type="submit">
            <i class="fa-solid fa-times"></i>
        </button>
    </form>
</li>